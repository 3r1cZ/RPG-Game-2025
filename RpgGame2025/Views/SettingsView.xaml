<UserControl x:Class="RpgGame2025.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RpgGame2025.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center" Content="Settings"/>

            <!-- Volume Controls -->
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left"
                       Content="Master Volume"/>
                <Slider Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center"
                        Width="300" Value="{Binding MainViewModel.MasterVolume}" Orientation="Horizontal"
                        IsSnapToTickEnabled="True" Maximum="100" TickPlacement="BottomRight"
                        AutoToolTipPlacement="BottomRight"/>
            </Grid>
            
            <!-- Keyboard Controls -->
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" VerticalAlignment="Center"
                       Content="Movement"/>
                <Button Grid.Row="0" Grid.Column="2"
                        Content="W"/>
                <Button Grid.Row="1" Grid.Column="1"
                        Content="A"/>
                <Button Grid.Row="1" Grid.Column="2"
                        Content="S"/>
                <Button Grid.Row="1" Grid.Column="3"
                        Content="D"/>

                <Label Grid.Row="2" Grid.Column="0"
                       Content="Dash"/>
                <Button Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center"
                        Content="SPACE"/>

                <Label Grid.Row="3" Grid.Column="0"
                       Content="Attack"/>
                <Button Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center"
                        Content="LMB"/>

                <Label Grid.Row="4" Grid.Column="0"
                       Content="Use Offhand Weapon"/>
                <Button Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center"
                        Content="RMB"/>
            </Grid>

            <Button HorizontalAlignment="Center" Content="Return" 
                    Command="{Binding UpdateViewCommand}" CommandParameter="Menu"/>
        </StackPanel>
    </Grid>
</UserControl>
